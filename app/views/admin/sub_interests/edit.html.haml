%section
  .container
    .heading
      %h1= t 'headers.edit_sub_interest'

    = form_for [:admin, @sub_interest] do |f|
      .form-row
        = f.label :interest_id, t('admin.interest')
        = f.select :interest_id, Interest.all.map { |i| [ i.translation, i.id ] }
      .form-row
        = f.label :name, t('admin.interest_name')
        = f.text_field :name
      .form-row
        = f.label :translation, t('admin.interest_translation')
        = f.text_field :translation
      .form-row
        %button.btn.btn-info.submittable= t 'headers.edit_sub_interest'
