= content_for :title, t("meta.course_lesson.title", pre_word: @course.name )
= content_for :meta_description, t("meta.course_lesson.description", pre_word: @course.name)
= content_for :meta_keywords, t("meta.course_lesson.keywords", pre_word: @course.name)
%h1.hide= t "meta.course_lesson.header", pre_word: @course.name

.single_course_wrapper
  .course
    .title= @course.name
    .delim
    .body
      .hint= t("course.hint.description")
      .delimiter
      .left= @course.description.html_safe
      .right
        %table
          %tr
            %td.field= t("lesson.teacher") + ":"
            %td.content= link_to @course.user.full_name, user_path(@course.user)
          %tr
            %td.field= t("lesson.rating") + ":"
            %td.content= @course.user.ratings.sum(&:rating)
          %tr
            %td.field= t("lesson.city") + ":"
            %td.content= t("lesson.cities.#{@course.city}").capitalize
          %tr
            %td.field= t("lesson.interest") + ":"
            %td.content= link_to t("interests.#{@course.interest.name}"), interest_lessons_path(@course.interest)
          %tr
            %td.field= t("lesson.sub_interest") + ":"
            %td.content= link_to t("sub_interests.#{@course.sub_interest.name}"), sub_interest_lessons_path(@course.interest, @course.sub_interest)
        - if current_user && @course.user == current_user
          .course_administration
            .edit_button
              %a{ href: edit_course_path(@course) }
                %span= t "lesson_form.edit_course"
            .add_lesson_course_button
              %a{ href: new_course_lesson_lessons_path(@course) }
                %span= t "lesson.add_course_lesson"
            .delimiter
      .delimiter
  .course_lessons_wrapper
    .course_lessons_hint= t("course.hint.includes_lessons")
    = render @course.lessons, only_lessons: true