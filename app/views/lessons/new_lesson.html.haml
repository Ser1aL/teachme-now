%div
  = semantic_form_for @lesson ? @lesson : Lesson.new do |f|
    = f.semantic_errors
    - if params[:course_id]
      = f.input :course_id, as: :hidden, :input_html => { value: params[:course_id].to_i }
    = f.input :name
    = f.input :city, as: :select, collection: Lesson::SUPPORTED_CITIES.map{ |city| t("lesson_form.#{city}") }
    = f.input :level, as: :select, collection: select_level(@lesson)
    = f.input :capacity, as: :number
    = f.input :place_price, as: :number
    = f.input :start_datetime, as: :datetime_select, :start_year => Date.today.to_s(:db).to_i, :label => "Start date and time"
    Duration
    = Date.today
    = f.input :hours, as: :select, collection: select_hours(@lesson), :prompt => "00 hours", :label => false
    = f.input :minutes, as: :select, collection: select_minutes(@lesson), :prompt => "00 minutes", :label => false
    = f.input :interest, as: :select, collection: @interests.map{ |i| [i.name.capitalize, i.id] }
    = f.input :sub_interest, as: :select, collection: @lesson ? @lesson.interest.sub_interests.map{ |i| [i.name.capitalize, i.id] } : []
    = f.input :description, as: :text
    = f.input :tease_description, as: :text
    = f.submit

- @interests.each do |interest|
  .invisible{id: "interest_options_#{interest.id}"}
    = options_for_select(interest.sub_interests.map{ |i| [i.name.capitalize, i.id] })
