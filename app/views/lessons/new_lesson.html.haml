%section
  .container
    .heading
      %h1 Создание урока
    .border-box.create-lesson
      %form{:action => "#"}
        .lesson-form
          .row-fluid
            .span8
              .lesson-title
                %input#lesson-price.text-input.input-full-width{:placeholder => "Введите тему урока...", :type => "text"}/
