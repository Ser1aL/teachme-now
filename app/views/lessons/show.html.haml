%h1 Lesson: #{@lesson.name}

%div
  -#TODO insert ratings
  Teacher:
  = link_to @lesson.teachers.first.full_name, user_path(@lesson.teachers.first)
  , rating:
- if @lesson.course_id
  %div
    Course name:
    = link_to @lesson.course.name, course_path(@lesson.course.id)
%div
  City:
  = @lesson.city
%div
  Level:
  = @lesson.level.capitalize
%div
  Capacity:
  = @lesson.capacity
%div
  Places_taken:
  = @lesson.places_taken
%div
  Place_price:
  = @lesson.place_price
%div
  Start_datetime:
  = @lesson.start_datetime
%div
  Interest:
  = @lesson.interest.name
%div
  Sub interest:
  = @lesson.sub_interest.name
%div
  Description:
  = @lesson.description
- if @lesson.teachers.include?(current_user)
  %div
    = link_to "Edit lesson", edit_lesson_path(@lesson.id)
- elsif @lesson.available?
  %div
    = link_to "Buy place"
- else
  %div
    = link_to "Add to watchlist"