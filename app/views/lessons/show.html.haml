%h1 Lesson: #{@lesson.name}

- if @lesson.course_id
  %div
    Course name:
    = link_to "#{@lesson.course.name}", course_path(@lesson.course.id)
%div
  City:
  = @lesson.city
%div
  Level:
  = @lesson.level
%div
  Capacity:
  = @lesson.capacity
%div
  Places_taken:
  = @lesson.places_taken
%div
  Place_price:
  = @lesson.place_price
%div
  Start_datetime:
  = @lesson.start_datetime
%div
  Interest:
  = @lesson.interest.name
%div
  Sub interest:
  = @lesson.sub_interest.name
%div
  Description:
  = @lesson.description


