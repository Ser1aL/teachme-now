%section
  .container.how-it-works
    .heading.clearfix
      %h3= t('hints.how_it_works')
    .static-heading
    %article.main-article
      .columns-wrapper.bordered
        .left-column
          .hiw_heading= t('lesson_form.start_study')
        .right-column
          .hiw_heading= t('lesson_form.start_learning')
        .clearfix

      .columns-wrapper
        .left-column.bordered.sub-heading
          .mid-arrow
        .right-column.bordered.sub-heading
          .mid-arrow
        .enumerator-double 1
        .mid-button
          %button.btn.btn-warning.from-submit= t('hints.how-it-works.become-partitiant')
        .clearfix

      .columns-wrapper
        .sign-in-screen