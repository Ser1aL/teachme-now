%section.sessions
  .container
    .heading
      %h1= t 'auth.header'
    .row
      .span10.offset1
        .login-form-title.clearfix.hidden-phone
          .pull-left= t 'auth.usual_form'
          .pull-right= t 'auth.social_form'
        .login-form-box
          .row-fluid
            .span4.offset1
              = render 'auth_form', alert: flash[:user_login_error]
              .without-password
                .without-password-nav
                  = link_to t('auth.sign_up'), '#signup'
                  ,
                  = link_to t('auth.forgot_password'), '#forgot'
                = render 'registration_form', registration_errors: (flash[:registration_errors] || {})
                = render 'forgot_password_form'
            .span4.offset2
              .form-row
                %label.form-label{:for => "#"}= t 'auth.sign_in_via.vkontakte'
                %button.btn.btn-block.btn-primary.btn-vk.vkontakte{:type => "submit"}= t 'auth.sign_in'
              .form-row
                %label.form-label{:for => "#"}= t 'auth.sign_in_via.facebook'
                %button.btn.btn-block.btn-primary.btn-fb.facebook{:type => "submit"}= t 'auth.sign_in'
              .form-hint
                %sup.warn *
                = t 'auth.relax_hint'
