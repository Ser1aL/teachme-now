#forgot.hide.without-password-block{ class: flash[:restore_errors].present? ? 'force-open' : ''}
  = form_tag '/d/users/password', autocomplete: 'off' do
    .form-row{ class: flash[:restore_errors].present? ? 'error' : '' }
      = label_tag 'user[email]', 'e-Mail', class: 'form-label'
      = text_field_tag 'user[email]', '', class: 'text-input input-full-width'
      - if flash[:restore_errors].present?
        .form-error-message
          %sup *
          = flash[:restore_errors].full_messages.first
    .form-btn-row.clearfix
      %button.btn.btn-warning.from-submit.pull-right{:type => "submit"}= t 'auth.send'