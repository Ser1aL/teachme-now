= content_for :title, t("meta.index.title")
= content_for :meta_description, t("meta.index.description")
= content_for :meta_keywords, t("meta.index.keywords")
.intro
  .container
    .ribbon
      .ribbon-left
        = link_to t('lesson_form.start_study'), lessons_path
      .ribbon-right
        = link_to t('lesson_form.start_learning'), new_lesson_path
      .divider или
    %nav.category-nav
      %ul
        - @interests.each do |interest|
          %li{ class: "cat-#{interest.name}"}
            = link_to interest_lessons_path(interest) do
              %span= t("interests.#{interest.name}")
              %i
.promo
  .container
    %h1= t('hints.nearest_lessons')
    .row
      - @nearest_lessons.each do |lesson|
        .span3
          .promo-column
            .illustration
              = image_tag lesson.teacher.photo_url(:medium), class: 'img-circle'
            .title= lesson.name
            .name= lesson.teacher.full_name
            .tag
              = t("interests.#{lesson.interest.name}") + ', ' + t("sub_interests.#{lesson.sub_interest.name}")
            .footer
              %i.icon-map-marker
              = t("lesson.address", { city: t("lesson.cities.#{lesson.city.downcase}"), address_line: lesson.address_line })
    .row
      .span4
      .span4.button
        = link_to t('hints.all_lessons'), lessons_path, class: 'btn btn-block btn-large btn-info'
      .span4
.profit-box
  .container.clearfix
    .sticker.visible-desktop
      %p.title= t('hints.did_you_know')
      %blockquote
        %p Прежде, чем выиграть президентские выборы в 1860 году, Авраам Линкольн потерпел поражение на восьми выборах различных уровней.
    .profit-box-wrapper
      %h2= t('hints.profitable_offers')
      .row-fluid
        .span4
          .promo-column
            .profit-label.profit
              %span.icon
                %span.w1
                  %span.w2= t('hints.profitable')
              %span.label
                = @lowest_price_lesson.place_price.to_s + ', '
                %sup 00
                %span= t('currency')
            .title= @lowest_price_lesson.name
            .name= @lowest_price_lesson.teacher.full_name
            .tag= t("interests.#{@lowest_price_lesson.interest.name}") + ', ' + t("sub_interests.#{@lowest_price_lesson.sub_interest.name}")
            .footer
              %i.icon-map-marker
              = t("lesson.address", { city: t("lesson.cities.#{@lowest_price_lesson.city.downcase}"), address_line: @lowest_price_lesson.address_line })
        .span4
          .promo-column
            .profit-label.popular
              %span.icon
                %span.w1
                  %span.w2= t('hints.popular')
              %span.label= @most_popular_lesson.places_taken
            .title= @most_popular_lesson.name
            .name= @most_popular_lesson.teacher.full_name
            .tag= t("interests.#{@most_popular_lesson.interest.name}") + ', ' + t("sub_interests.#{@most_popular_lesson.sub_interest.name}")
            .footer
              %i.icon-map-marker
              = t("lesson.address", { city: t("lesson.cities.#{@most_popular_lesson.city.downcase}"), address_line: @most_popular_lesson.address_line })
        .span4
          .promo-column
            .profit-label.rating
              %span.icon
                %span.w1
                  %span.w2= t('lesson.rating')
              %span.label= @most_rated_lesson.teacher.total_rating
            .title= @most_rated_lesson.name
            .name= @most_rated_lesson.teacher.full_name
            .tag= t("interests.#{@most_rated_lesson.interest.name}") + ', ' + t("sub_interests.#{@most_rated_lesson.sub_interest.name}")
            .footer
              %i.icon-map-marker
              = t("lesson.address", { city: t("lesson.cities.#{@most_rated_lesson.city.downcase}"), address_line: @most_rated_lesson.address_line })
.active-users-box.hidden-phone
  .container.clearfix
    %h3 Активисты на сайте:
    .active-users.clearfix
      .box.box-1
        %h4 ( #{t('hints.our_pride')} )
        %ul
          - @random_users[0..4].each do |user|
            %li
              = link_to user_path(user) do
                = image_tag user.photo_url(:thumb)
      .box.box-2
        %h4 ( #{t('hints.leaders')} )
        %ul
          - @random_users[5..9].each do |user|
            %li
              = link_to user_path(user) do
                = image_tag user.photo_url(:thumb)
      .box.box-3
        %h4 ( #{t('hints.upcoming_leaders')} )
        %ul
          - @random_users[10..14].each do |user|
            %li
              = link_to user_path(user) do
                = image_tag user.photo_url(:thumb)
